#include <iostream>
#include <cstring>

using namespace std;
#define TAM 500

int inicio=0, fim=0;

void mostrar();
void cads();
void senha();

struct dados{
	char nome[30];
	int cod;
}typedef dados;

dados cliente[TAM];

int main(int argc, char** argv) {
	setlocale(LC_ALL, "");

	int op;
  do{

    system("cls");
    // Mostragem para ver comportamento da fila
    //cout << "\n========================\n";
    //cout << "INICIO DA FILA: " << inicio <<endl;
    //cout << "========================\n";
    //cout << "FIM DA FILA: " << fim <<endl;
    //cout << "========================\n";

    cout<<"\n====Clientes AgÃªncia====\n\n";
    cout<<" (1) - Cadastrar cliente \n";
    cout<<" (2) - Mostrar Clientes \n";
    cout<<" (0) - Sair\n\n";
    cin>>op;

    switch(op){

      case 1: cads(); break;
      case 2: mostrar(); break;

    }
  }

  while (op!=0);

  system("PAUSE");
	return 0;
}

void mostrar(){
	int i;
  cout <<"\nLista de Clientes: \n";
  cout <<"(Senha : Nome) \n\n";

	for (i=0; i<TAM; i++){
    if(i < fim){
	    cout << cliente[i].cod << " : ";
	    cout << cliente[i].nome << endl << endl;
   }
	}
	system("pause");
}

void cads(){

	if(fim == TAM){
    cout <<"\nERROR! Cadastro Cheio.\n";
  }

  else{
    cout <<"\nDigite o Nome do Paciente: ";
    cin >> cliente[fim].nome;
    cout <<"\nCadastro Efetuado.\n";
    fim ++;
    senha();
  }
  system("PAUSE");
}

void senha(){

	if(fim > 0){
    cliente[fim-1].cod = fim;
  }
}
