#include <iostream>
#include <cstring>

using namespace std;

#define TAM 3

int inicio=0, fim=0;

void ordenar();
void mostrar();
void cads();

struct dados{
	char nome[30];
	int cod;
}typedef dados;

dados cliente[TAM];



int main(int argc, char** argv) {
	setlocale(LC_ALL, "");
	
	int op;
	
  do{
  	
    system("cls");
    // Mostragem para ver comportamento da fila
    cout << "\n========================\n";
    cout << "INICIO DA FILA: " << inicio <<endl;
    cout << "========================\n";
    cout << "FIM DA FILA: " << fim <<endl;
    cout << "========================\n";
    
    cout<<"====Cadastro De Pacientes====\n\n";
    cout<<" (1) - Cadastrar cliente \n";
    cout<<" (2) - Buscar um Paciente \n";
    cout<<" (3) - Mostrar Pacientes \n";
    cout<<" (0) - Sair\n\n";
    cin>>op;
    switch(op){
    	
      case 1: cads(); break;
      
      case 2: cout <<"fahfuhaf";
      
      case 3: ordenar(); mostrar(); break;
      
    }
  }
  
  while (op!=0);
  
  system("PAUSE");	
	
	return 0;
}

void mostrar(){
	int i;
	for (i=0; i<TAM; i++){
		cout << cliente[i].cod << ":";
		cout << cliente[i].nome << endl;
	}
	system("pause");
}

void ordenar(){
	dados aux;
	int i, j;
	
	for(i=TAM - 1; i>0; i--){
		for(j=0; j<i; j++){
			if(cliente[j].cod > cliente[j+1].cod){
				aux = cliente[j];
				cliente[j] = cliente[j+1];
				cliente[j+1] = aux;
			}
				
		}
	}
}

void cads(){
	
	if(fim == TAM){
    cout <<"\nERROR! Cadastro Cheio.\n";
  }
  
  else{
    cout <<"\nDigite o Nome do Paciente: ";
    cin >> cliente[fim].nome;
    cout <<"\nDigite o cod do Paciente: ";
    cin >> cliente[fim].cod;
    
    cout <<"\nCadastro Efetuado.\n";
    fim ++;
  }
  
  system("PAUSE");
  
}

void senha(){
	
	
}
